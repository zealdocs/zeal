# EditorConfig (https://editorconfig.org)
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
max_line_length = 100
trim_trailing_whitespace = true

[{*.cmake,CMakeLists.txt}]
# TODO: indent_size = 2
indent_size = 4

[*.json]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
